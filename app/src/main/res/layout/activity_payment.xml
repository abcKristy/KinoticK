<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Информация о заказе -->
        <TextView
            android:id="@+id/orderInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Сумма платежа -->
        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <!-- Горизонтальный контейнер для кнопок и СБП -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Вертикальный контейнер для кнопок оплаты -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Кнопка оплаты картой -->
                <Button
                    android:id="@+id/cardPayButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Т-банк"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/brown_espresso"
                    android:backgroundTint="@color/yellow_honey"
                    android:layout_marginBottom="8dp"/>

                <!-- Кнопка оплаты Google Pay -->
                <Button
                    android:id="@+id/googlePayButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВТБ"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#4285F4"
                    android:layout_marginBottom="8dp"/>

                <!-- Кнопка оплаты Apple Pay -->
                <Button
                    android:id="@+id/applePayButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apple Pay"
                    android:textAllCaps="false"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <!-- Кнопка оплаты через СБП -->
                <Button
                    android:id="@+id/sbpPayButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Альфабанк"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/red_brick"/>
            </LinearLayout>

            <!-- Контейнер для изображения СБП -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Изображение СБП (замените на ваше) -->
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:src="@drawable/qr"
                    android:contentDescription="Логотип СБП"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оплата по СБП"
                    android:textColor="@color/orange_deep"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Добавляем в конец LinearLayout -->
        <Button
            android:id="@+id/paymentSuccessButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оплата прошла"
            android:textAllCaps="false"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>